{
  "name": "advanced-bitcoin-mining-suite",
  "version": "2.0.0",
  "description": "Advanced cross-platform Bitcoin mining management system with real-time dashboard",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "start:production": "NODE_ENV=production node src/index.js",
    "build": "npm run build:dashboard && npm run build:extension",
    "build:dashboard": "webpack --mode production",
    "build:extension": "webpack --config webpack.extension.config.js --mode production",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "deploy:generate": "node scripts/generate-deployments.js",
    "deploy:windows": "node src/deployment/windows-deploy.js",
    "deploy:ubuntu": "node src/deployment/ubuntu-deploy.js",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "bitcoin",
    "mining",
    "dashboard",
    "cross-platform",
    "windows11",
    "ubuntu",
    "fedora",
    "real-time",
    "profitability"
  ],
  "author": "Bitcoin Mining Suite",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "node-cryptocurrency": "^1.0.0",
    "systeminformation": "^5.21.15",
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^4.0.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3"
  }
}




