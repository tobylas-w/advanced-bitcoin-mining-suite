# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-here

# Mining Configuration
DEFAULT_MINER_POOL=your-mining-pool-url
DEFAULT_WALLET_ADDRESS=your-wallet-address
DEFAULT_CPU_THRESHOLD=80
DEFAULT_GPU_THRESHOLD=90

# Database
DATABASE_PATH=./data/mining.db

# Dashboard
DASHBOARD_TITLE=Crypto Mining Manager
DASHBOARD_THEME=dark

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_THRESHOLD=5

# Browser Extension
EXTENSION_ID=crypto-mining-extension
EXTENSION_NAME=Crypto Mining Manager




